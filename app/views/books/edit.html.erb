<h1 class="edit_title">Editing Book</h1>

<% if @book.errors.any? %>
<h3 class="error_meseage"><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

<div class="edit_Title">
  <h3>Title</h3>
  <%= f.text_field :title %>
</div>

<div class="edit_Body">
  <h3>Body</h3>
  <%= f.text_area :body %>
</div>

<div class="Update_Book"><%= f.submit 'Update Book' %></div>

<% end %>

<span class="show_show"><%= link_to "Show", book_path(@book.id) %></span>
<span>|</span>
<span class="show_back"><%= link_to "Back", books_path %></span>
