<h1>Books </h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td class="book_title"><%= book.title %></td>
    <td class="book_body"><%= book.body %></td>
    <td class="show"><%= link_to "Show", show_book_path(book.id) %></td>
    <td class="edit"><%= link_to "Edit", edit_book_path(book.id) %></td>
    <td class="destory"><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
  </tr>
  <% end %>
</table>

<h1>New book</h1>
<% if @book.errors.any? %>

<h3 class="error_meseage"><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: Book.new,method: :post do |f| %>

<h3>Title</h3>
<%= f.text_field :title %>

<h3>Body</h3>
<%= f.text_area :body %>

<div class="Create_book">
<%= f.submit 'Create Book' %>
</div>
<% end %>